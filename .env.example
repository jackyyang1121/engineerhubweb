# Django 設置
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=engineerhub.com,www.engineerhub.com,localhost
CORS_ALLOWED_ORIGINS=https://engineerhub.com,https://www.engineerhub.com

# 資料庫設置
DB_PASSWORD=your-secure-database-password

# Redis 設置
REDIS_URL=redis://redis:6379/0

# 前端設置
VITE_API_BASE_URL=https://engineerhub.com/api
VITE_WS_BASE_URL=wss://engineerhub.com/ws

# 郵件設置（可選）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# 社交登錄（可選）
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# AWS S3（可選，用於媒體文件存儲）
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=engineerhub-media
AWS_S3_REGION_NAME=us-east-1

# Sentry（可選，用於錯誤追蹤）
SENTRY_DSN=your-sentry-dsn